{
    "format_version": "1.20.80",
    "minecraft:block": {
        "description": {
            "identifier": "ck:fire_dracolyte_crystal_block",
            "menu_category": {
                "category": "nature",
                "group": "itemGroup.name.ore"
            },
            "traits": {
                "minecraft:placement_direction": {
                    "enabled_states": [
                        "minecraft:facing_direction"
                    ],
                    "y_rotation_offset": 180
                }
            }
        },
        "components": {
            "minecraft:material_instances": {
				"*": {
					"texture": "fire_dracolyte_crystal",
					"render_method": "alpha_test"
				}
			},
			"minecraft:geometry": "geometry.dracolyte_crystal",
			"minecraft:destructible_by_mining": {
                "seconds_to_destroy": 1.0
            },
			"minecraft:loot": "loot_tables/blocks/dracolyte_crystals/fire_dracolyte_crystal.json",
			"minecraft:map_color": "#000000",
			"minecraft:flammable": {
				"flame_odds": 0,
				"burn_odds": 0
			}
        },
        "permutations": [
            {
				"condition": "query.block_state('minecraft:facing_direction') == 'north'",
				"components": {
					"minecraft:transformation": {
                        "rotation": [90, 0, 0]}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'south'",
				"components": {
					"minecraft:transformation": {
                        "rotation": [90, 180, 0]}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
                        "rotation": [90, 90, 0]}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'east'",
				"components": {
					"minecraft:transformation": {
                        "rotation": [90, 270, 0]}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'up'",
				"components": {
					"minecraft:transformation": {
                        "rotation": [180, 0, 0]}
				}
			},
			{
				"condition": "query.block_state('minecraft:facing_direction') == 'down'",
				"components": {
					"minecraft:transformation": {
                        "rotation": [0, 0, 0]}
				}
			}
        ]
    }
}